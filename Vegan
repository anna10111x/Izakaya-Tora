      public void addtable(FoodItem item){
          cartManager.addItem(item);
          
      DefaultTableModel dt =  (DefaultTableModel) jTable3.getModel();
      dt.addRow(new Object[] {
          item.getId(), 
          item.getName(),
          item.getQuantity(),
          item.getPrice(),
          item.getPortion() });
          updateTotal();
    }
    private void updateTotal(){
        int total = cartManager.getTotal();
        totalLabel2.setText(" " + total);
    }
