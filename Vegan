  private void S1ActionPerformed(java.awt.event.ActionEvent evt) {                                   
        String portion = (String) jComboBox7.getSelectedItem(); // get Small, Regular, etc.
        int fixedPrice = 35;

        FoodItem item = new FoodItem(1, "Falafel Rolls",1,fixedPrice ,portion );
        cartManager.addItem(item);
        addtable(item );
        updateTotal();
    }                                  

