    private void jButton32ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        int selectedRow = jTable3.getSelectedRow();
        
        if (selectedRow!= -1){
            int id = (int)jTable3.getValueAt(selectedRow, 0);
            cartManager.removeItemById(id);
            
            DefaultTableModel dt = (DefaultTableModel) jTable3.getModel();
            dt.removeRow(selectedRow);
            updateTotal();
            
            JOptionPane.showMessageDialog(this, "Item has been removed from Cart.");
        } else{
            JOptionPane.showMessageDialog(this, "Please select an item to remove.");
        }
    }                                         

