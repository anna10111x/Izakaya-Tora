public class Halal extends javax.swing.JFrame {
    
    private CartManager cartManager = new CartManager();
    
    public Halal() {
        initComponents();
       
    }
    

    public void addtable(FoodItem item){
        cartManager.addItem(item);
        
      DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
      model.addRow(new Object[]{
          item.getId(), 
          item.getName(),
          item.getQuantity(),
          item.getPrice(),
          item.getPortion() });
      
      updateTotal();
    }
    
    private void updateTotal(){
        int total = cartManager.getTotal();
        totalLabel1.setText("" + total);
    }
    
